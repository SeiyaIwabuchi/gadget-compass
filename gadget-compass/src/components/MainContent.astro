---
// MainContent.astro
import FeaturedSection from './FeaturedSection.astro';
import RecentSection from './RecentSection.astro';
---

<main class="main-content">
    <!-- Featured Section -->
    <FeaturedSection />

    <!-- Recent Section -->
    <RecentSection />
</main>

<style>
    .main-content {
        background: var(--bg-white);
        border-radius: 12px;
        box-shadow: var(--shadow);
        overflow: hidden;
    }
</style>
</main>
