---
// Sidebar.astro
---

<aside class="sidebar">
    <!-- Profile Widget -->
    <div class="profile-widget fade-in-card">
        <div class="profile-header">
            <div class="profile-avatar">🧭</div>
            <h3 class="profile-name">テックナビゲーター</h3>
            <p class="profile-title">ガジェット・テクノロジー専門ライター</p>
            <p class="profile-bio">
                最新テクノロジーの海を航海し、皆さんに価値ある情報をお届けします
            </p>
        </div>
        <div class="profile-content">
            <div class="profile-stats">
                <div class="profile-stat">
                    <div class="profile-stat-number">156</div>
                    <div class="profile-stat-label">記事数</div>
                </div>
                <div class="profile-stat">
                    <div class="profile-stat-number">2.4K</div>
                    <div class="profile-stat-label">フォロワー</div>
                </div>
                <div class="profile-stat">
                    <div class="profile-stat-number">89</div>
                    <div class="profile-stat-label">レビュー</div>
                </div>
            </div>
            <div class="profile-links">
                <a href="#" class="profile-link twitter" title="Twitter">𝕏</a>
                <a href="#" class="profile-link github" title="GitHub">⚡</a>
                <a href="#" class="profile-link youtube" title="YouTube">📺</a>
                <a href="#" class="profile-link email" title="Email">📧</a>
            </div>
            <div class="profile-specialties">
                <div class="profile-specialty-title">専門分野</div>
                <div class="profile-tags">
                    <span class="profile-tag">スマートフォン</span>
                    <span class="profile-tag">AI・機械学習</span>
                    <span class="profile-tag">サーバー構築</span>
                    <span class="profile-tag">開発ツール</span>
                    <span class="profile-tag">クラウド</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Categories Widget -->
    <div class="sidebar-widget fade-in-card">
        <h3 class="widget-title">📁 カテゴリー</h3>
        <div class="widget-content">
            <ul class="category-list">
                <li class="category-item">
                    <a href="#" class="category-link">スマートフォン (24)</a>
                </li>
                <li class="category-item">
                    <a href="#" class="category-link">PC・ノート (18)</a>
                </li>
                <li class="category-item">
                    <a href="#" class="category-link">オーディオ (15)</a>
                </li>
                <li class="category-item">
                    <a href="#" class="category-link">カメラ (12)</a>
                </li>
                <li class="category-item">
                    <a href="#" class="category-link">ウェアラブル (9)</a>
                </li>
                <li class="category-item">
                    <a href="#" class="category-link">スマートホーム (7)</a>
                </li>
            </ul>
        </div>
    </div>

    <!-- Popular Articles Widget -->
    <div class="sidebar-widget fade-in-card">
        <h3 class="widget-title">🔥 人気の記事</h3>
        <div class="widget-content">
            <ul class="popular-list">
                <li class="popular-item">
                    <a href="#" class="popular-link"
                        >iPhone 15 Pro徹底レビュー</a
                    >
                </li>
                <li class="popular-item">
                    <a href="#" class="popular-link">MacBook Air M2の実力検証</a
                    >
                </li>
                <li class="popular-item">
                    <a href="#" class="popular-link">AirPods Pro第3世代登場</a>
                </li>
                <li class="popular-item">
                    <a href="#" class="popular-link">Sony α7R V完全ガイド</a>
                </li>
                <li class="popular-item">
                    <a href="#" class="popular-link"
                        >Apple Watch Series 9新機能</a
                    >
                </li>
            </ul>
        </div>
    </div>

    <!-- Tag Cloud Widget -->
    <div class="sidebar-widget fade-in-card">
        <h3 class="widget-title">🏷️ タグクラウド</h3>
        <div class="widget-content">
            <div class="tag-cloud">
                <span class="tag">レビュー</span>
                <span class="tag">新製品</span>
                <span class="tag">比較</span>
                <span class="tag">おすすめ</span>
                <span class="tag">iPhone</span>
                <span class="tag">Android</span>
                <span class="tag">MacBook</span>
                <span class="tag">Windows</span>
                <span class="tag">カメラ</span>
                <span class="tag">音質</span>
                <span class="tag">バッテリー</span>
                <span class="tag">コスパ</span>
            </div>
        </div>
    </div>

    <!-- Newsletter Widget -->
    <div class="sidebar-widget newsletter fade-in-card">
        <h3 class="widget-title">📬 最新情報をお届け</h3>
        <div class="widget-content">
            <p class="newsletter-text">
                新記事の通知やX更新情報を<br>メールでお届けします
            </p>
            <form class="newsletter-form">
                <input
                    type="email"
                    class="newsletter-input"
                    placeholder="メールアドレス"
                />
                <button type="submit" class="newsletter-btn">登録</button>
            </form>
        </div>
    </div>

    <script>
        // Handle newsletter form (desktop)
        const newsletterForm = document.querySelector(
            ".newsletter-form",
        ) as HTMLFormElement;
        if (newsletterForm) {
            newsletterForm.addEventListener("submit", function (e: Event) {
                e.preventDefault();
                const emailInput = this.querySelector(
                    ".newsletter-input",
                ) as HTMLInputElement;
                if (emailInput && emailInput.value) {
                    alert("登録ありがとうございます！");
                    emailInput.value = "";
                }
            });
        }
    </script>

    <style>
        .sidebar {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }
        /* Profile Widget */
        .profile-widget {
            background: var(--bg-white);
            border-radius: 12px;
            box-shadow: var(--shadow);
            overflow: hidden;
        }

        .profile-header {
            background: var(--gradient);
            color: white;
            padding: 1.5rem;
            text-align: center;
            position: relative;
        }

        .profile-avatar {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            margin: 0 auto 1rem;
            border: 3px solid rgba(255, 255, 255, 0.3);
            transition: transform 0.3s ease;
        }

        .profile-avatar:hover {
            transform: scale(1.05);
        }

        .profile-name {
            font-size: 1.25rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .profile-title {
            font-size: 0.875rem;
            opacity: 0.9;
            margin-bottom: 0.5rem;
        }

        .profile-bio {
            font-size: 0.8rem;
            opacity: 0.8;
            line-height: 1.4;
        }

        .profile-content {
            padding: 1.5rem;
        }

        .profile-stats {
            display: grid;
            grid-template-columns: 1fr 1fr 1fr;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .profile-stat {
            text-align: center;
        }

        .profile-stat-number {
            font-size: 1.25rem;
            font-weight: 700;
            color: var(--primary-blue);
            margin-bottom: 0.25rem;
        }

        .profile-stat-label {
            font-size: 0.75rem;
            color: var(--text-secondary);
        }

        .profile-links {
            display: flex;
            gap: 0.75rem;
            justify-content: center;
            margin-bottom: 1rem;
        }

        .profile-link {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            text-decoration: none;
            color: white;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .profile-link:hover {
            transform: translateY(-2px) scale(1.1);
        }

        .profile-link.twitter {
            background: #1da1f2;
        }

        .profile-link.github {
            background: #333;
        }

        .profile-link.youtube {
            background: #ff0000;
        }

        .profile-link.email {
            background: var(--accent-orange);
        }

        .profile-specialties {
            border-top: 1px solid var(--border);
            padding-top: 1rem;
        }

        .profile-specialty-title {
            font-size: 0.875rem;
            font-weight: 600;
            color: var(--text-primary);
            margin-bottom: 0.5rem;
        }

        .profile-tags {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
        }

        .profile-tag {
            background: rgba(59, 130, 246, 0.1);
            color: var(--secondary-blue);
            padding: 0.25rem 0.5rem;
            border-radius: 12px;
            font-size: 0.75rem;
            font-weight: 500;
        }
        /* Sidebar Widgets */
        .sidebar-widget {
            background: var(--bg-white);
            border-radius: 12px;
            box-shadow: var(--shadow);
            overflow: hidden;
        }

        .widget-content {
            padding: 1.5rem;
        }

        .widget-title {
            background: var(--gradient);
            color: white;
            padding: 1rem;
            font-weight: 600;
            font-size: 0.875rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 0;
        }

        .category-list,
        .popular-list {
            list-style: none;
        }

        .category-item,
        .popular-item {
            padding: 0.5rem 0;
            border-bottom: 1px solid var(--border);
        }

        .category-item:last-child,
        .popular-item:last-child {
            border-bottom: none;
        }

        .category-link,
        .popular-link {
            text-decoration: none;
            color: var(--text-secondary);
            font-weight: 500;
            transition: color 0.2s ease;
        }

        .category-link:hover,
        .popular-link:hover {
            color: var(--secondary-blue);
        }

        .tag-cloud {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
        }

        .tag-cloud .tag {
            font-size: 0.8rem;
        }
        /* Newsletter */
        .newsletter {
            background: var(--bg-white);
        }

        .newsletter .widget-content {
            background: var(--gradient);
            color: white;
            text-align: center;
        }

        .newsletter-text {
            font-size: 0.875rem;
            margin-bottom: 1rem;
            opacity: 0.9;
        }

        .newsletter-form {
            display: flex;
            gap: 0.5rem;
        }

        .newsletter-input {
            flex: 1;
            padding: 0rem 0.5rem 0rem 0.5rem;
            border: none;
            border-radius: 6px;
            font-size: 0.875rem;
        }

        .newsletter-btn {
            background: var(--accent-orange);
            color: white;
            border: none;
            padding: 0.75rem 1rem;
            border-radius: 6px;
            font-weight: 500;
            cursor: pointer;
            transition: background 0.2s ease;
        }

        .newsletter-btn:hover {
            background: #ea580c;
        }

        .tag {
            background: rgba(59, 130, 246, 0.1);
            color: var(--secondary-blue);
            padding: 0.25rem 0.75rem;
            border-radius: 15px;
            font-size: 0.75rem;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.2s ease;
        }

        .tag:hover {
            background: rgba(59, 130, 246, 0.2);
        }
        /* Mobile Styles */
        @media (max-width: 768px) {
            .sidebar {
                display: none;
            }
        }
    </style>
</aside>
