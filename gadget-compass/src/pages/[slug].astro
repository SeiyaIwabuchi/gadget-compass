---
import BaseLayout from "../components/layout/BaseLayout.astro";
import TrendingSection from "../components/TrendingSection.astro";
import { getCollection, getEntry } from "astro:content";

export async function getStaticPaths() {
    const articles = await getCollection("articles");
    return articles.map((article) => ({
        params: { slug: article.slug },
    }));
}

const { slug } = Astro.params;
const entry = await getEntry("articles", slug);
if (!entry) {
    throw new Error(`Ë®ò‰∫ã„ÅåË¶ã„Å§„Åã„Çä„Åæ„Åõ„Çì: ${slug}`);
}
const { data } = entry;
const { Content } = await entry.render();
---

<BaseLayout>
    <article class="markdown-content">
        {data.tags && data.tags.length > 0 && (
            <div class="tags">
                {data.tags.map((tag: string) => (
                    <span class="tag">{tag}</span>
                ))}
            </div>
        )}
        <h1>{data.title}</h1>
        <div class="meta">
            {data.author && <span class="meta-item">üë§ {data.author}</span>}
            {
                data.pubDate && (
                    <span class="meta-item">
                        üìÖ {data.pubDate instanceof Date
                            ? data.pubDate.toISOString().slice(0, 10)
                            : data.pubDate}
                    </span>
                )
            }
            {data.stars && <span class="meta-item">‚≠ê {data.stars}ÁÇπ</span>}
            {data.timeRequired && <span class="meta-item">‚è±Ô∏è {data.timeRequired}</span>}
        </div>
        <Content />
    </article>
</BaseLayout>

<script>
    // „Ç≥„Éº„É´„Ç¢„Ç¶„Éà„Éú„ÉÉ„ÇØ„Çπ„ÅÆÂ§âÊèõ
    document.addEventListener('DOMContentLoaded', () => {
        const blockquotes = document.querySelectorAll('blockquote');
        blockquotes.forEach((blockquote) => {
            const firstP = blockquote.querySelector('p');
            if (!firstP || blockquote.classList.contains('callout')) return;
            
            const text = firstP.textContent?.trim() || '';
            let type = '';
            let title = '';
            
            if (text.startsWith('[!NOTE]')) {
                type = 'note';
                title = 'Note';
                firstP.textContent = text.replace('[!NOTE]', '').trim();
            } else if (text.startsWith('[!TIP]')) {
                type = 'tip';
                title = 'Tip';
                firstP.textContent = text.replace('[!TIP]', '').trim();
            } else if (text.startsWith('[!WARNING]')) {
                type = 'warning';
                title = 'Warning';
                firstP.textContent = text.replace('[!WARNING]', '').trim();
            } else if (text.startsWith('[!CAUTION]')) {
                type = 'caution';
                title = 'Caution';
                firstP.textContent = text.replace('[!CAUTION]', '').trim();
            } else if (text.startsWith('[!IMPORTANT]')) {
                type = 'important';
                title = 'Important';
                firstP.textContent = text.replace('[!IMPORTANT]', '').trim();
            }
            
            if (type) {
                blockquote.className = `callout callout-${type}`;
                
                // „Çø„Ç§„Éà„É´Ë¶ÅÁ¥†„ÇíËøΩÂä†
                const titleElement = document.createElement('div');
                titleElement.className = 'callout-title';
                titleElement.textContent = title;
                blockquote.insertBefore(titleElement, firstP);
            }
        });
    });
</script>

<style>
    :root {
        --primary-blue: #0066CC;
        --accent-blue: #4A90E2;
        --tech-gray: #F8F9FA;
        --border-light: #E1E5E9;
        --text-primary: #2C3E50;
        --text-secondary: #64748B;
        --success-green: #10B981;
        --warning-orange: #F59E0B;
        --danger-red: #EF4444;
    }

    .markdown-content {
        max-width: 1024px;
        min-width: 320px;
        width: 100%;
        min-height: 500px;
        margin: 0 auto;
        padding: 0 2rem 2rem 2rem;
        font-family: 'Inter', 'Noto Sans JP', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        color: var(--text-primary);
        line-height: 1.7;
        box-sizing: border-box;
    }

    /* „Ç≥„É≥„ÉÜ„É≥„ÉÑ„Ç®„É™„Ç¢„ÅÆÁµ±‰∏Ä */
    .markdown-content :global(*) {
        max-width: 100%;
        box-sizing: border-box;
    }

    /* ÁîªÂÉè„ÇÑ„ÉÜ„Éº„Éñ„É´„ÅÆÂπÖÂà∂Âæ° */
    .markdown-content :global(img),
    .markdown-content :global(table),
    .markdown-content :global(pre) {
        max-width: 100%;
        width: auto;
    }

    /* „Çø„Ç∞ */
    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        padding: 0.5rem 0;
    }

    .tag {
        display: inline-block;
        background: linear-gradient(135deg, var(--primary-blue), var(--accent-blue));
        color: white;
        font-size: 0.75rem;
        font-weight: 500;
        padding: 0.375rem 0.875rem;
        border-radius: 20px;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 2px 4px rgba(0, 102, 204, 0.2);
        cursor: pointer;
        position: relative;
        overflow: hidden;
    }

    .tag::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
        transition: left 0.5s ease;
    }

    .tag:hover::before {
        left: 100%;
    }

    .tag:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(0, 102, 204, 0.3);
    }

    /* „É°„ÇøÊÉÖÂ†± */
    .description {
        font-size: 1.125rem;
        color: var(--text-secondary);
        margin-bottom: 2rem;
        padding: 1rem;
        background: var(--tech-gray);
        border-left: 4px solid var(--accent-blue);
        border-radius: 0 8px 8px 0;
    }

    .meta {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;
        padding: 0.75rem 0;
        border-bottom: 1px solid var(--border-light);
    }

    .meta-item {
        font-size: 0.875rem;
        color: var(--text-secondary);
        display: flex;
        align-items: center;
        gap: 0.375rem;
        padding: 0.25rem 0.75rem;
        background: var(--tech-gray);
        border-radius: 16px;
        border: 1px solid transparent;
        transition: all 0.2s ease;
    }

    .meta-item:hover {
        background: rgba(74, 144, 226, 0.08);
        border-color: rgba(74, 144, 226, 0.2);
        color: var(--text-primary);
    }

    /* „Éò„ÉÉ„ÉÄ„Éº„Çπ„Çø„Ç§„É´ */
    .markdown-content :global(h1) {
        font-size: 2rem;
        font-weight: 700;
        color: var(--primary-blue);
        border-bottom: 3px solid var(--primary-blue);
        padding-bottom: 0.5rem;
    }

    .markdown-content :global(h2) {
        font-size: 1.5rem;
        font-weight: 600;
        margin: 2rem 0 1rem 0;
        padding: 0.5rem 1rem 0.5rem 1.5rem;
